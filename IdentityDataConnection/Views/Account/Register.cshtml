@model IdentityDataConnection.Models.RegisterViewModel
@{
	ViewBag.Title = "Đăng ký tài khoản";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<meta name="description" content="">
	<meta name="author" content="">
	<!-- Custom fonts for this template-->
	<link href="~/Content/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

	<!-- Custom styles for this template-->
	<link href="~/Content/css/sb-admin.css" rel="stylesheet">

</head>

<body class="bg-dark" style="background-image:url(/Content/img/bg.jpg)">

	<div class="container" style="margin:0 auto;">
		<div class="card card-register mx-auto mt-5">
			<div class="card-header">Đăng ký tài khoản</div>
			<div class="card-body">
				@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
				{
					@Html.AntiForgeryToken()
					@Html.ValidationSummary("", new { @class = "text-danger" })
					<div class="form-group">
						@*<label class = "col-md-2 control-label">Họ tên</label>*@
						<div class="col-md-12">
							<input type="text" name="UserName" id="un" class="form-control" placeholder="Họ tên" data-val="true" data-val-required="The User Name field is required." value=""/>
							@*@Html.TextBoxFor(m => m.UserName, new { @class = "form-control", id = "un" })*@
						</div>
					</div>
						
					<div class="form-group">
						@*<label class="col-md-2 control-label">Email</label>*@
						<div class="col-md-12">
							<input class="form-control" placeholder="Email" data-val="true" data-val-email="The Email field is not a valid e-mail address." data-val-required="The Email field is required." id="e" name="Email" type="text" value="">
							@*@Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "e" })*@
						</div>
					</div>
					<hr />
					<div class="form-group">
						@*<label class="col-md-2 control-label">Mật khẩu</label>*@
						<div class="col-md-12">
							<input class="form-control" placeholder="Mật khẩu" data-val="true" data-val-length="The Password must be at least 6 characters long." data-val-length-max="100" data-val-length-min="6" data-val-required="The Password field is required." id="p" name="Password" type="password">
							@*@Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "p" })*@
						</div>
					</div>
					<div class="form-group">
						@*<label class="col-md-4 control-label">Xác nhận mật khẩu</label>*@
						<div class="col-md-12">
							<input class="form-control" placeholder="Xác nhận mật khẩu" data-val="true" data-val-equalto="The password and confirmation password do not match." data-val-equalto-other="*.Password" id="cp" name="ConfirmPassword" type="password">
							@*@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "cp" })*@
						</div>
					</div>
					<div class="form-group">
						<div class="col-md-12">
							<input type="submit" class="btn btn-primary col-md-12" value="Đăng ký" id="reg" />
							<a href="/Admin/Login" class="d-block text-center mt-2 small">Đăng nhập</a>
						</div>
					</div>
				}
			</div>
		</div>
	</div>

	<!-- Bootstrap core JavaScript-->
	<script src="~/Content/vendor/jquery/jquery.min.js"></script>
	<script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

	<!-- Core plugin JavaScript-->
	<script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

</body>

</html>